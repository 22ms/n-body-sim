{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/imgui/*.cpp",
                "${workspaceFolder}/src/opencl_wrapper/kernel.cpp",
                "-I",
                "${workspaceFolder}/include",
                "-L",
                "${workspaceFolder}/lib",
                "-lOpenCL",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.exe",
                "-lopengl32",
                "-lglfw3dll",
                "-lglew32",
                "-lgdi32",
                "-O1",  // Optimize for compile time
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}