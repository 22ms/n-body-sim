{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I",
                "${workspaceFolder}/OpenCL/include",
                "-L",
                "${workspaceFolder}/OpenCL/lib",
                "-lOpenCL",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/build/main.exe"
            ]
            ,
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}